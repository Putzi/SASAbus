    <LinearLayout
        android:id="@+id/linearlayout_search_input_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- container of buttons and input field for departure-->
        <RelativeLayout
            android:id="@+id/relativelayout_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_input_fields_margin"
            android:layout_marginBottom="@dimen/search_input_fields_margin">

            <LinearLayout
                android:id="@+id/linearlayout_departure_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                
            	<include layout="@layout/imagebutton_more" />

           </LinearLayout>
            
            <LinearLayout
                android:id="@+id/linearlayout_departure_inputfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/linearlayout_departure_more">

		        <AutoCompleteTextView
		            android:id="@+id/autocompletetextview_departure"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:hint="@string/departure_bus_stop"
		            android:singleLine="true"
		            android:imeOptions="actionDone" />
		        
			</LinearLayout>
            
	        <LinearLayout
	            android:id="@+id/linearlayout_departure_buttons"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_toRightOf="@id/linearlayout_departure_more">
	            
	            <include layout="@layout/imagebutton_nearby"
	                android:id="@+id/imagebutton_departure_nearby" />
				
	            <include layout="@layout/imagebutton_map"
	            	android:id="@+id/imagebutton_departure_map" />
	            
	            <include layout="@layout/imagebutton_favorites"
					android:id="@+id/imagebutton_departure_favorites" />
				
			</LinearLayout>
			
        </RelativeLayout>
        
        <!-- container of buttons and input field for arrival-->
        <RelativeLayout
            android:id="@+id/relativelayout_arrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_input_fields_margin"
            android:layout_marginBottom="@dimen/search_input_fields_margin">
            
            <LinearLayout
                android:id="@+id/linearlayout_arrival_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
	            
		            <include layout="@layout/imagebutton_more" />
		            
		    </LinearLayout>
            
	        <LinearLayout
                android:id="@+id/linearlayout_arrival_inputfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/linearlayout_arrival_more">

		        <AutoCompleteTextView
		            android:id="@+id/autocompletetextview_arrival"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:hint="@string/arrival_bus_stop"
		            android:singleLine="true"
		            android:imeOptions="actionDone" />
	       	</LinearLayout>
	       	
	        <LinearLayout
	            android:id="@+id/linearlayout_arrival_buttons"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_toRightOf="@id/linearlayout_arrival_more">

	            <include layout="@layout/imagebutton_nearby"
	                android:id="@+id/imagebutton_arrival_bus_stops_nearby" />
				
	            <include layout="@layout/imagebutton_map"
	                android:id="@+id/imagebutton_arrival_map" />
				
	            <include layout="@layout/imagebutton_favorites"
	                android:id="@+id/imagebutton_arrival_favorites" />
	            
			</LinearLayout>

        </RelativeLayout>
        
    </LinearLayout> <!-- search input fields -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            style="@style/button_with_text"
            android:text="@string/date_pattern" />
        
        <Button
            android:id="@+id/button_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button_with_text"
            android:text="@string/time_pattern" />

    </LinearLayout> <!-- Date and time buttons -->
	
	<include layout="@layout/button_search"
	    android:id="@+id/button_search" />
	
</LinearLayout>