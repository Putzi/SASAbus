<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/listitem_height"
    android:orientation="horizontal">
    
    <TextView
	    android:id="@+id/textview_busline"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="3"
	    android:layout_gravity="center_vertical"
	    android:ellipsize="marquee"
	    android:singleLine="true"
	    android:text="Linien:\n\r 1, 3"
	    android:textSize="@dimen/textsize_standard" />
    
    <TextView
	    android:id="@+id/textview_info_title"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="7"
	    android:layout_gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    android:text="Umleitung am 17. und 24. Juni 2013"
	    android:textSize="@dimen/textsize_standard" />
    
</LinearLayout>